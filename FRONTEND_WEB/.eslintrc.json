{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks",
				"@typescript-eslint",
				"prettier"
    ],
    "rules": {
      "react/jsx-filename-extension": [1, { "extensions": [".ts", ".tsx"] }],
      "import/extensions":[
        "error",
        "ignorePackages",
        {
          "ts":"never",
          "tsx":"never"
        }
      ]
    },
    "settings": {
      "import/resolver":{
        "typescript":{}
      }
    }
}
